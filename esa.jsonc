{
  // 项目名称（随意，但建议唯一）
  "name": "freetool",

  // 项目类型：静态站点
  "type": "static",

  // 【关键】静态资源目录（相对于仓库根目录）
  "assets": "dist",

  // 构建配置
  "build": {
    // 构建命令
    "command": "npm run build"
  },

  // 部署配置
  "deploy": {
    // SPA 路由支持（React / Vite 必须）
    "spa": true,

    // 开启边缘压缩
    "compression": true
  },

  // 运行时（仅用于 build 阶段）
  "runtime": {
    "nodejs": "22"
  }
}
